@model SaksAppWeb.Models.ViewModels.MeetingMinutesVm
@using SaksAppWeb.Models

@{
    ViewData["Title"] = $"Minutes {Model.Year}/{Model.YearSequenceNumber}";
}

<div class="d-flex justify-content-between align-items-start">
    <div>
        <h1>Minutes — Meeting @Model.Year/@Model.YearSequenceNumber — @Model.MeetingDate</h1>
        <div class="text-muted">@Model.Location</div>
    </div>
    <div class="text-end">
        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.MeetingId">Back to agenda</a>
        <a class="btn btn-outline-primary" asp-action="DownloadMinutesPdf" asp-route-id="@Model.MeetingId">Download minutes PDF</a>
    </div>
</div>

<hr />

<div class="card mb-4">
    <div class="card-header">
        <strong>Signed/scanned minutes</strong>
    </div>
    <div class="card-body">
        <form asp-action="UploadSignedMinutes" method="post" enctype="multipart/form-data" class="mb-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="meetingId" value="@Model.MeetingId" />
            <div class="row g-2 align-items-end">
                <div class="col-md-8">
                    <label class="form-label">Upload signed PDF</label>
                    <input class="form-control" type="file" name="file" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-outline-primary" type="submit">Upload</button>
                </div>
            </div>
        </form>

        @if (!Model.SignedMinutes.Any())
        {
            <div class="text-muted">No signed scans uploaded.</div>
        }
        else
        {
            <ul class="list-unstyled">
                @foreach (var s in Model.SignedMinutes)
                {
                    <li class="mb-2">
                        <a asp-controller="Cases" asp-action="DownloadAttachment" asp-route-id="@s.AttachmentId">@s.OriginalFileName</a>
                        <span class="text-muted">(@s.SizeBytes bytes)</span>
                    </li>
                }
            </ul>
        }
    </div>
</div>

<form asp-action="Minutes" method="post" id="mainMinutesForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MeetingId" />

    <h3>Meeting notes</h3>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Attendance</label>
            <textarea class="form-control" asp-for="AttendanceText" rows="3"></textarea>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Absence</label>
            <textarea class="form-control" asp-for="AbsenceText" rows="3"></textarea>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Approval of previous minutes</label>
        <textarea class="form-control" asp-for="ApprovalOfPreviousMinutesText" rows="2"></textarea>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Next meeting date</label>
            <input class="form-control" asp-for="NextMeetingDate" type="date" />
        </div>
    </div>

    <div class="mb-4">
        <label class="form-label">Eventuelt</label>
        <textarea class="form-control" asp-for="EventueltText" rows="3"></textarea>
    </div>

    <h3>Case minutes</h3>

    @for (var i = 0; i < Model.CaseEntries.Count; i++)
    {
        <input type="hidden" asp-for="CaseEntries[i].MeetingCaseId" />
        <input type="hidden" asp-for="CaseEntries[i].BoardCaseId" />
        <input type="hidden" asp-for="CaseEntries[i].CaseNumber" />
        <input type="hidden" asp-for="CaseEntries[i].Title" />
        <input type="hidden" asp-for="CaseEntries[i].AssigneeDisplay" />
        <input type="hidden" asp-for="CaseEntries[i].MinutesEntryId" />

        <div class="card mb-3">
            <div class="card-header">
                <strong>#@Model.CaseEntries[i].CaseNumber — @Model.CaseEntries[i].Title (@Model.CaseEntries[i].AssigneeDisplay)</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Outcome</label>
                        <select class="form-select" asp-for="CaseEntries[i].Outcome"
                                asp-items="Html.GetEnumSelectList<MeetingCaseOutcome>()"></select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Official notes</label>
                    <textarea class="form-control" asp-for="CaseEntries[i].OfficialNotes" rows="4"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Decision</label>
                    <textarea class="form-control" asp-for="CaseEntries[i].DecisionText" rows="2"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Follow-up</label>
                    <textarea class="form-control" asp-for="CaseEntries[i].FollowUpText" rows="3"></textarea>
                </div>

                <hr />

                <h6>Minutes attachments (PDF/images)</h6>

                @if (!Model.CaseEntries[i].Attachments.Any())
                {
                    <div class="text-muted">No attachments</div>
                }
                else
                {
                    <ul class="list-unstyled">
                        @foreach (var a in Model.CaseEntries[i].Attachments)
                        {
                            <li class="mb-2">
                                <a asp-controller="Cases" asp-action="DownloadAttachment" asp-route-id="@a.AttachmentId">
                                    @a.OriginalFileName
                                </a>
                                <span class="text-muted">(@a.ContentType, @a.SizeBytes bytes)</span>

                                <button class="btn btn-sm btn-outline-danger d-inline ms-2" type="submit"
                                        form="removeAttachmentForm-@a.LinkId"
                                        onclick="return confirm('Remove this attachment from the minutes entry?')">
                                    Remove
                                </button>
                            </li>
                        }
                    </ul>
                }

                @if (Model.CaseEntries[i].MinutesEntryId is not null)
                {
                    <div class="mt-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-md-8">
                                <label class="form-label">Add attachment</label>
                                <input class="form-control" type="file" name="file" form="uploadAttachmentForm-@Model.CaseEntries[i].MinutesEntryId" />
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-outline-primary" type="submit" form="uploadAttachmentForm-@Model.CaseEntries[i].MinutesEntryId">Upload</button>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-muted mt-2">Minutes entry id not available. Reload the page.</div>
                }
            </div>
        </div>
    }

    <button class="btn btn-primary" type="submit">Save minutes</button>
</form>

@for (var i = 0; i < Model.CaseEntries.Count; i++)
{
    @if (Model.CaseEntries[i].MinutesEntryId is not null)
    {
        <form id="uploadAttachmentForm-@Model.CaseEntries[i].MinutesEntryId" asp-action="UploadMinutesEntryAttachment" method="post" enctype="multipart/form-data" style="display:none;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="meetingMinutesCaseEntryId" value="@Model.CaseEntries[i].MinutesEntryId" />
        </form>
        @foreach (var a in Model.CaseEntries[i].Attachments)
        {
            <form id="removeAttachmentForm-@a.LinkId" asp-action="RemoveMinutesEntryAttachment" method="post" style="display:none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="linkId" value="@a.LinkId" />
            </form>
        }
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
