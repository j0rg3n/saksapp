@model List<SaksAppWeb.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email / Username</th>
            <th>Full Name (Real Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@(user.FullName ?? "-")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@user.Id">Edit name</a>
                </td>
            </tr>
        }
    </tbody>
</table>
