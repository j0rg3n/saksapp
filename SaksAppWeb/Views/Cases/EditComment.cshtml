@model SaksAppWeb.Models.ViewModels.CommentEditVm

@{
    ViewData["Title"] = "Edit comment";
}

<h1>Edit comment</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CaseId" />

    <div class="mb-3">
        <label class="form-label">Comment</label>
        <textarea class="form-control" asp-for="Text" rows="6"></textarea>
        <span class="text-danger" asp-validation-for="Text"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.CaseId">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
