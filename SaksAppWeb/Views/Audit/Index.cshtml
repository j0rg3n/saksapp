@model IReadOnlyList<SaksAppWeb.Models.AuditEvent>

@{
    ViewData["Title"] = "Audit log";
}

<h1>Audit log</h1>

<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-6">
            <label class="form-label">Search</label>
            <input class="form-control" name="q" value="@ViewBag.Query" placeholder="EntityType / EntityId / Reason" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Take</label>
            <input class="form-control" type="number" name="take" value="@ViewBag.Take" min="50" max="1000" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary" type="submit">Filter</button>
        </div>
    </div>
</form>

<table class="table table-sm table-striped">
    <thead>
    <tr>
        <th>When (UTC)</th>
        <th>Actor</th>
        <th>Action</th>
        <th>Entity</th>
        <th>Id</th>
        <th>Reason</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.OccurredAt</td>
            <td>@(e.ActorUserId ?? "-")</td>
            <td>@e.Action</td>
            <td>@e.EntityType</td>
            <td>@e.EntityId</td>
            <td>@(e.Reason ?? "")</td>
        </tr>
        <tr>
            <td colspan="6">
                <details>
                    <summary>Before/After</summary>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Before</strong>
                            <pre style="white-space: pre-wrap">@e.BeforeJson</pre>
                        </div>
                        <div class="col-md-6">
                            <strong>After</strong>
                            <pre style="white-space: pre-wrap">@e.AfterJson</pre>
                        </div>
                    </div>
                </details>
            </td>
        </tr>
    }
    </tbody>
</table>
